<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Atom Decoration"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@id/tv_title"/>

    <TextView
        android:id="@+id/unsharedElectron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Unshared Electron"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"/>

    <LinearLayout
        android:id="@+id/atom_deco_view"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/unsharedElectron"/>

    <Button
        android:id="@+id/atom_deco_btn_up_0"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toTopOf="@+id/atom_deco_view"
        app:layout_constraintLeft_toLeftOf="@+id/atom_deco_view" />

    <Button
        android:id="@+id/atom_deco_btn_up_1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="0dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="ᆞ"
        app:layout_constraintTop_toTopOf="@+id/atom_deco_btn_up_0"
        app:layout_constraintLeft_toRightOf="@+id/atom_deco_btn_up_0"/>

    <Button
        android:id="@+id/atom_deco_btn_up_2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="0dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="ᆢ"
        app:layout_constraintTop_toTopOf="@+id/atom_deco_btn_up_0"
        app:layout_constraintLeft_toRightOf="@+id/atom_deco_btn_up_1"/>

    <Button
        android:id="@+id/atom_deco_btn_left_0"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@+id/atom_deco_view"
        app:layout_constraintRight_toLeftOf="@+id/atom_deco_view"/>

    <Button
        android:id="@+id/atom_deco_btn_left_1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="0dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="ᆞ"
        app:layout_constraintTop_toBottomOf="@+id/atom_deco_btn_left_0"
        app:layout_constraintLeft_toLeftOf="@+id/atom_deco_btn_left_0"/>

    <Button
        android:id="@+id/atom_deco_btn_left_2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="0dp"
        android:gravity="center"
        android:textSize="20sp"
        android:rotation="90"
        android:text="ᆢ"
        app:layout_constraintTop_toBottomOf="@+id/atom_deco_btn_left_1"
        app:layout_constraintLeft_toLeftOf="@+id/atom_deco_btn_left_0"/>

    <Button
        android:id="@+id/atom_deco_btn_right_0"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@+id/atom_deco_view"
        app:layout_constraintLeft_toRightOf="@+id/atom_deco_view"/>

    <Button
        android:id="@+id/atom_deco_btn_right_1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="0dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="ᆞ"
        app:layout_constraintTop_toBottomOf="@+id/atom_deco_btn_right_0"
        app:layout_constraintLeft_toLeftOf="@+id/atom_deco_btn_right_0"/>

    <Button
        android:id="@+id/atom_deco_btn_right_2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="0dp"
        android:gravity="center"
        android:textSize="20sp"
        android:rotation="90"
        android:text="ᆢ"
        app:layout_constraintTop_toBottomOf="@+id/atom_deco_btn_right_1"
        app:layout_constraintLeft_toLeftOf="@+id/atom_deco_btn_right_0"/>

    <Button
        android:id="@+id/atom_deco_btn_down_0"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/atom_deco_view"
        app:layout_constraintLeft_toLeftOf="@+id/atom_deco_view"/>

    <Button
        android:id="@+id/atom_deco_btn_down_1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="0dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="ᆞ"
        app:layout_constraintTop_toTopOf="@+id/atom_deco_btn_down_0"
        app:layout_constraintLeft_toRightOf="@+id/atom_deco_btn_down_0"/>

    <Button
        android:id="@+id/atom_deco_btn_down_2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="0dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="ᆢ"
        app:layout_constraintTop_toTopOf="@+id/atom_deco_btn_down_0"
        app:layout_constraintLeft_toRightOf="@+id/atom_deco_btn_down_1"/>

    <CheckBox
        android:id="@+id/atom_deco_cb_show_element"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:text="Show Element"
        app:layout_constraintStart_toEndOf="@id/atom_deco_btn_right_0"
        app:layout_constraintTop_toTopOf="@id/atom_deco_btn_up_0"/>

    <TextView
        android:id="@+id/atom_deco_tv_charge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:text="Charge"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/atom_deco_btn_down_0"/>

    <EditText
        android:id="@+id/atom_deco_et_charge"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:text="0"
        app:layout_constraintLeft_toLeftOf="@id/atom_deco_tv_charge"
        app:layout_constraintTop_toBottomOf="@id/atom_deco_tv_charge" />

    <Button
        android:id="@+id/atom_deco_btn_charge_down"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:padding="0dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="-"
        app:layout_constraintTop_toTopOf="@+id/atom_deco_et_charge"
        app:layout_constraintLeft_toRightOf="@+id/atom_deco_et_charge"/>

    <Button
        android:id="@+id/atom_deco_btn_charge_up"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:padding="0dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="+"
        app:layout_constraintTop_toTopOf="@+id/atom_deco_et_charge"
        app:layout_constraintLeft_toRightOf="@+id/atom_deco_btn_charge_down"/>

    <TextView
        android:id="@+id/atom_deco_tv_charge_as_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Charge As Circle for Carbocation or Carbanion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/atom_deco_et_charge"/>

    <SeekBar
        android:id="@+id/atom_deco_sb_charge_circle"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:max="8"
        android:progress="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/atom_deco_tv_charge_as_circle"/>

    <TextView
        android:id="@+id/atom_deco_tv_starmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:text="Mark"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/atom_deco_sb_charge_circle"/>

    <SeekBar
        android:id="@+id/atom_deco_sb_starmark"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:max="8"
        android:progress="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/atom_deco_tv_starmark"/>

    <Button
        android:id="@+id/atom_deco_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:text="Cancel"
        app:layout_constraintTop_toBottomOf="@id/atom_deco_sb_starmark"
        app:layout_constraintRight_toLeftOf="@id/atom_deco_btn_ok"/>

    <Button
        android:id="@+id/atom_deco_btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Ok"
        app:layout_constraintTop_toTopOf="@id/atom_deco_btn_cancel"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>